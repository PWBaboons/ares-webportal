<h2>Compliments</h2>

<p><b>Select Comps:</b>

{{#power-select selected=filter options=compFilters onchange=(action "filterChanged") as |name|}}
  {{name}}
{{/power-select}}

<!-- {{#link-to 'search-comps' class="btn btn-default"}}<i class="fa fa-search" aria-hidden="true"></i> Search Comps{{/link-to}} -->

</p>

{{#each comps as |comp|}}
<div class="comp">
 <p>{{{ansi-format text=comp.msg}}}<i>From {{comp.from}} on {{comp.date}}</i></p></div>
{{/each}}


{{#each pages as |pg|}}
{{#if (eq pg page)}}
<button class="btn btn-primary" {{action "goToPage" pg}}>{{pg}}</button>
{{else}}
<button class="btn btn-default" {{action "goToPage" pg}}>{{pg}}</button>
{{/if}}
{{/each}}
